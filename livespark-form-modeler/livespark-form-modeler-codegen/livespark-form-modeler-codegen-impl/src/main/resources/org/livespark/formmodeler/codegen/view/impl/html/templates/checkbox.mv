@if{field.readonly}
    @code{disabled = 'disabled'}
@else{}
    @code{disabled = ''}
@end{}
            <div id="@{field.name}_form_group" class="checkbox @{disabled}">
                <label>
                    <input type="checkbox" id="@{field.name}" @{disabled}>@{field.label}
                </label>
                <p id="@{field.name}_help_block" class="help-block"></p>
            </div>
